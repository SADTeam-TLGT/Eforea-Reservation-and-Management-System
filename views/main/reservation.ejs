  <!-- Modals -->
  <!-- View Order Modal -->
  <div class="modal fade" id="viewOrderModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Your Service Cart</h4>
        </div>
        <div class="modal-body viewOrderMod">
          <table width="100%">
            <tr>
              <th class="th-modal" width="15%"> Quantity </th>
              <th class="th-modal" width="50%"> Service </th>
              <th class="th-modal" width="20%"> Amount </th>
              <th class="th-modal" width="30%"> Total Amount </th>
            </tr>
            <tr>
              <td class="td-quantity"> 2 </td>
              <td> MS-Swedish Massage </td>
              <td> 399.00 </td>
              <td> 798.00 </td>
            </tr>
            <tr>
              <td> 1 </td>
              <td> BS-Anti Aging Body Scrub </td>
              <td> 900.00 </td>
              <td> 900.00 </td>
            </tr>
            <tr>
              <td> 2 </td>
              <td> OS-Ear Candling </td>
              <td> 200.00 </td>
              <td> 400.00 </td>
            </tr>
          </table>
          <hr>
          <p style="text-align: right; font-size: 17px;">
            <strong>Total:</strong>
            <span style="font-size: 15px;" class="badge">Php 2,098.00</span>
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- DONE ORDER MODAL -->
  <div class="modal fade" id="doneOrderModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Reserve Now?</h4>
        </div>
        <div class="modal-body">
          Upon clicking confirm, you are no longer able to edit the services you reserved. Continue?
          <br />
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="button" onclick="submitReservation()" class="btn btn-primary" data-dismiss="modal">Confirm</button>
        </div>
      </div>
    </div>
  </div>

  <!-- ADD TO CART MODAL -->
  <div class="modal fade" id="addCartModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="myModalLabel">Add to Cart?</h4>
        </div>
        <div class="modal-body">
          <center>
            <table width="100%">
              <tr style="background-color: #D9E3EA;">
                <th class="thtd-addCart">Service Name: </th>
                <td class="thtd-addCart">
                  <span id="serviceHolder"></span>
                </td>
              </tr>
              <tr>
                <th class="thtd-addCart">Price: </th>
                <td class="thtd-addCart">
                  <span id="priceHolder"></span>
                </td>
              </tr>
              <tr>
                <th class="thtd-addCart">Quantity: </th>
                <td class="thtd-addCart">
                  <input type="number" id="itemnum" name="txtQuantity" value=1 min=1 style="width: 100px;"> </td>
              </tr>
            </table>
          </center>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <input type="hidden" id="item_id" value="">
          <input type="submit" onclick="addToCart()" name="btnAddOrder" data-dismiss="modal" class="btn btn-primary" value="Add">
        </div>
      </div>
    </div>
  </div>

  <!-- INFO MODAL -->
  <div class="modal fade" id="infoServiceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title info-label">BlahBlah Lorem</h4>
        </div>
        <div class="modal-body">
          <center>
            <img src="assets/images/s-swedish.jpg" width="300" height="300">
            <h4>Description:</h4>
            <p class="info-desc"></p>
            <h5>
              <strong>Price:</strong> PHP
              <span class="info-price"></span>/
              <span class="info-time"></span>minutes
            </h5>
          </center>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <!-- User Data Modal -->
  <div class="modal fade" id="getUserData" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title info-label">Information</h4>
        </div>
        <form id="userData" action="#">
          <div class="modal-body">
            <center>
              <div class="row">
                <div class="col-md-3">
                  <label>Name: </label>
                </div>
                <input type="text" name="uname" placeholder="Name">
              </div>
              <div class="row">
                <div class="col-md-3">
                  <label>Contact Number: </label>
                </div>
                <input type="text" name="number" placeholder="Contact">
              </div>
              <div class="row">
                <div class="col-md-3">
                  <label>Address: </label>
                </div>
                <input type="text" name="address" placeholder="Address">
              </div>
              <div class="row">
                <div class="col-md-3">
                  <label>Reservation Date: </label>
                </div>
                <input type="date" name="data">
              </div>
            </center>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" onclick="validateInfo()" value="Confirm">Confirm</button>
          </div>
        </form>
      </div>
    </div>
  </div>

