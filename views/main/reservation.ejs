  <hr>
  <div aria-hidden="true">
    <div class="container-fluid" style="padding-top: 40px;">
      <div class="row">
        <!-- List of Services + Search Bar -->
        <div class="col-md-2 sidebar" style="padding-top: 35px;">
          <h3 class="h3-categories"> Categories </h3>

          <form class="search-container" action="#" onsubmit="searchService()">
            <input type="text" id="search-bar" placeholder="Search for a service...">
            <a href="#">
              <img class="search-icon" src="assets/images/search-icon.png">
            </a>
          </form>
          <ul class="nav-sidebar category-list">
            
          </ul>
        </div>

        <div class="col-md-7 col-md-offset-2 main">
          <div class="alert alert-info" id="stickyServ">
            <h2 class="modal-title" id="linkserv1" style="text-align: center;">SERVICES Offered</h2>
          </div>
          <div class="service-list"><div class='row no_result' style="display: none"><center><h1 style='padding-top: 60px'>No Result</h1></center></div></div>
        </div>
        <!-- End of Column 7 -->
        <div class="col-md-3 div-orders sidebar2" style="padding-top: 30px; ">
          <h3 class="headServ" style="font-size: 20px;">Your Order(s)</h3>
          <hr>
          <div class="order-container" style="overflow-y: auto; height: 100px; overflow-x:hidden"></div>
          <br />
          <button type="button" class="btn btn-primary submit" style="float: right;" name="btnDoneOrder" data-toggle="modal" data-target="#getUserData">
